extends ../layout/index.pug
block contenido
  div(class="py-10")
    h1(class="text-4xl font-extrabold text-center") Bienes
      span(class="font-normal") Raices
    h2(class="text-center text-2xl font-extrabold")= pagina

    div.mt-8.mx-auto.max-w-md
      div.bg-white.py-8.px-4.shadow
        form(class="space-y-5")

          div
            label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="nombre") Tu Nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre")

          div
            label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="email") Tu Email
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="text" name="email")

          div
            label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="password") Tu Password
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")

          div
            label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="repetir_password") Repite Tu Password
            input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite Tu Password" type="password" name="repetir_password")

          div(class="flex item-center justify-between")
            a(href="/auth/login" class="text-gray-500 text-sm") Inicia Sesi√≥n 
            a(href="/auth/recovery" class="text-gray-500 text-sm") Olvide mi Password

          input(class="w-full bg-indigo-500 hover:bg-indigo-600 text-white text-sm font-bold uppercase px-6 py-3 rounded cursor-pointer" type="submit" value="Crear Cuenta")
